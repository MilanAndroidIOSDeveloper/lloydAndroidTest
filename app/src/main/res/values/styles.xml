<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="bold_headline_large">
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">@dimen/_24sdp</item>
		<item name="android:lineHeight">@dimen/_42sdp</item>
		<item name="android:letterSpacing">0.02</item>
	</style>

	<style name="bold_headline_medium">
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">@dimen/_17sdp</item>
		<item name="android:lineHeight">@dimen/_34sdp</item>
		<item name="android:letterSpacing">0.02</item>
	</style>

	<style name="bold_headline_small">
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">@dimen/_14sdp</item>
		<item name="android:lineHeight">@dimen/_18sdp</item>
		<item name="android:letterSpacing">0.02</item>
	</style>

	<style name="body">
		<item name="android:fontFamily">@font/anonymous_pro_regular</item>
		<item name="android:textSize">@dimen/_13sdp</item>
		<item name="android:lineHeight">@dimen/_17sdp</item>
	</style>

	<style name="body_bold">
		<item name="android:fontFamily">@font/anonymous_pro_bold</item>
		<item name="android:textSize">@dimen/_14sdp</item>
		<item name="android:lineHeight">@dimen/_26sdp</item>
		<item name="android:letterSpacing">0.02</item>
	</style>

	<style name="button">
		<item name="android:background">@drawable/bg_button_primary</item>
		<item name="android:textColor">@color/white</item>
		<item name="textAllCaps">true</item>
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">@dimen/_10sdp</item>
		<item name="android:lineHeight">@dimen/_21sdp</item>
		<item name="android:letterSpacing">0.02</item>
		<item name="android:elevation">@dimen/_4sdp</item>
		<item name="elevation">@dimen/_4sdp</item>
	</style>

	<style name="button_outline">
		<item name="android:background">@drawable/bg_outline_black</item>
		<item name="android:textColor">@color/black</item>
		<item name="textAllCaps">true</item>
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">@dimen/_10sdp</item>
		<item name="android:lineHeight">@dimen/_21sdp</item>
		<item name="android:letterSpacing">0.02</item>
		<item name="android:elevation">@dimen/_4sdp</item>
		<item name="elevation">@dimen/_4sdp</item>
	</style>

	<style name="spinner_theme">
		<item name="android:textColor">@color/black</item>
		<item name="android:fontFamily">@font/anonymous_pro_regular</item>
		<item name="android:textSize">@dimen/_14sdp</item>
		<item name="android:scrollbars">none</item>
	</style>

	<style name="Progress_Bar" parent="Widget.AppCompat.ProgressBar">
		<item name="android:indeterminateTint">@color/green_2</item>
	</style>



</resources>